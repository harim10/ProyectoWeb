<div class="card card-body p-4 rounded-12 bg-white text-dark">
  <h3>Tareas</h3>
  <form action="/tasks/add" method="post">

    {{! Title Input }}
    <div class="mb-3">
      <label for="title">Escribe el titulo de la tarea</label>
      <input
        id="title"
        class="form-control rounded-4 bg-white text-dark"
        type="text"
        name="title"
        placeholder="Titulo"
        autofocus
      />
    </div>

    {{! Description Input }}
    <div class="mb-3">
      <label for="description">Descripción</label>
      <textarea
        class="form-control rounded-4 bg-white text-dark"
        name="description"
        cols="80"
        placeholder="Agrega una descripción de la tarea"
      ></textarea>
    </div>

    <button class="btn btn-success" type="submit">Agregar</button>
  </form>
</div>